<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.easv.wishme.wishme_android.fragments.EditProfileFragment"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout1">

            <include layout="@layout/snippet_wish_edit"/>
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeLayout1"
        android:layout_marginTop="50dp"
        android:id="@+id/ScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp">

                <ImageView
                    android:id="@+id/wishImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@color/skyBlue" />

                <ImageView
                    android:id="@+id/ivCamera"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:elevation="10dp"
                    android:src="@drawable/ic_addcamera" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivWish"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_wishlist_item"
                        android:layout_marginTop="5dp"
                        />

                    <EditText
                        android:id="@+id/wishNameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:inputType="textCapWords"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivPriceET"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_price"
                        android:layout_marginTop="5dp"/>

                    <EditText
                        android:id="@+id/wishPriceET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:inputType="text"
                        android:maxLength="8"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relLayout8"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivWebsite"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_website"
                        android:layout_marginTop="5dp"/>

                    <EditText
                        android:id="@+id/wishLinkET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:inputType="textUri"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivDescription"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_description"
                        android:layout_marginTop="5dp"/>

                    <EditText
                        android:id="@+id/descriptionTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:padding="10dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rating_text"
                            android:textSize="20sp"
                            android:id="@+id/rating"
                            />

                        <ImageView
                            android:id="@+id/stars"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@+id/rating"

                            app:srcCompat="@drawable/ic_full_star" />

                        <ImageView
                            android:id="@+id/stars2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_toEndOf="@+id/stars"
                            android:layout_below="@+id/rating"
                            app:srcCompat="@drawable/ic_star_empty" />

                        <ImageView
                            android:id="@+id/stars3"
                            android:layout_width="50dp"
                            android:layout_toEndOf="@+id/stars2"
                            android:layout_height="50dp"
                            android:layout_below="@+id/rating"
                            app:srcCompat="@drawable/ic_star_empty"
                            />

                        <ImageView
                            android:id="@+id/stars4"
                            android:layout_width="50dp"
                            android:layout_toEndOf="@+id/stars3"
                            android:layout_height="50dp"
                            android:layout_below="@+id/rating"
                            app:srcCompat="@drawable/ic_star_empty" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_toEndOf="@+id/stars4"
                            android:layout_below="@+id/rating"
                            app:srcCompat="@drawable/ic_star_empty" />
                    </RelativeLayout>


                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>